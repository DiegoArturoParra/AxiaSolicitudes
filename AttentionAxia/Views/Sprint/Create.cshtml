@model AttentionAxia.Models.Sprint

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear sprint</h2>

<div class="form-horizontal">
    <h4>Sprint</h4>
    <hr />
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div id="newRow"></div>
        <br />
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label col-md-2">Cantidad de los sprints</label>
                <input type="text" class="form-control" maxlength="2" name="CantidadSprints" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label col-md-2">Sigla de los sprints</label>
                <input type="text" class="form-control" maxlength="4" name="Sigla" />
                <input type="text" class="d-none" name="FechaGeneracion" value="@DateTime.Now" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label col-md-2">Cantidad de sprints</label>
                <select class="select form-control" name="Periodo">
                    <option value="Q1"> Q1</option>
                    <option value="Q2">Q2</option>
                    <option value="Q3">Q3</option>
                    <option value="Q4">Q4</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    }
</div>



<div>
    @Html.ActionLink("Regresar a la lista", "Index", null, new { @class = "btn btn-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

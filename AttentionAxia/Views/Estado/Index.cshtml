@model IEnumerable<AttentionAxia.Models.Estado>

@{
    ViewBag.Title = "Estados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Estados</h2>

<p>
    @Html.ActionLink("Crear nuevo estado", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered table-responsive-lg">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Nivel)
        </th>
        <th class="text-center">
            Acciones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td class="text-center">           
            <button class="btn" type="button" disabled style="background-color:@item.Nivel !important;">ㅤㅤㅤㅤㅤ</button>
        </td>
        <td class="text-center">
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

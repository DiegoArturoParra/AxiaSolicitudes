@model IEnumerable<AttentionAxia.Models.Estado>

@{
    ViewBag.Title = "Estados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Estados</h2>
<a href="@Url.Action("Create","Estado")" class="btn btn-primary mb-2 mt-2"><i class="fa fa fa-plus mr-2"></i><strong>Agregar Estado</strong></a>
<table class="table table-striped table-bordered table-responsive-lg">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Nivel)
        </th>
        <th class="text-center">
            Acciones
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td class="text-center">
                <button class="btn" type="button" disabled style="background-color:@item.Nivel !important;"></button>
            </td>
            <td class="text-center">
                <a href="@Url.Action("Edit","Estado", new { id = item.Id })" class="text-center btn btn-outline-dark mb-2"><i class="fa fa-pencil-alt"></i></a>
                <a href="@Url.Action("Delete","Estado", new { id = item.Id })" class="text-center btn btn-outline-danger mb-2"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
    }

</table>

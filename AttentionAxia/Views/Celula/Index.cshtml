@model IEnumerable<AttentionAxia.Models.Celula>

@{
    ViewBag.Title = "Células de trabajo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>@ViewBag.Title</title>
<h2>Listado de células</h2>
<a href="@Url.Action("Create","Celula")" class="btn btn-primary mb-2 mt-2"><i class="fa fa fa-plus mr-2"></i><strong>Agregar Célula</strong></a>
<table class="table table-striped table-bordered table-responsive-lg">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th class="text-center">Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td class="text-center">
                <a href="@Url.Action("Edit","Celula", new { id = item.Id })" class="text-center btn btn-outline-dark mb-2"><i class="fa fa-pencil-alt"></i></a>
                <a href="@Url.Action("Delete","Celula", new { id = item.Id })" class="text-center btn btn-outline-danger mb-2"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
    }

</table>

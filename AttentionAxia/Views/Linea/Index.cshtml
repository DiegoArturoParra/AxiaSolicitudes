@model IEnumerable<AttentionAxia.Models.Linea>

@{
    ViewBag.Title = "Lineas de trabajo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lineas</h2>
<a href="@Url.Action("Create","Linea")" class="btn btn-primary mb-2 mt-2"><i class="fa fa fa-plus mr-2"></i><strong>Agregar Linea</strong></a>
<table class="table table-striped table-bordered table-responsive-lg">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td class="text-center">
                <a href="@Url.Action("Edit","Linea", new { id = item.Id })" class="text-center btn btn-outline-dark mb-2"><i class="fa fa-pencil-alt"></i></a>
                <a href="@Url.Action("Delete","Linea", new { id = item.Id })" class="text-center btn btn-outline-danger mb-2"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
    }
</table>

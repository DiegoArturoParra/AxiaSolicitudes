@model AttentionAxia.Models.Solicitud

@{
    ViewBag.Title = "Eliminar iniciativa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>@ViewBag.Title</title>
<div class="row">
    <!-- left column -->
    <div class="col-md-8">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title text-bold text-white">¿Está seguro que desea eliminar la iniciativa?</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <section class="form-horizontal">
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <h5><span class="badge badge-pill p-2 text-white" style="background-color:@Model.Estado.Nivel">@Model.Estado.Descripcion</span></h5>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Descripción Iniciativa</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" disabled>@Model.Iniciativa</textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Responsable</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" disabled value="@Model.Responsable.Nombres">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Progreso %</label>
                        <div class="project_progress col-lg-10">
                            @{
                                var progreso = $"{Model.Avance}%";
                            }
                            <div class="progress progress">
                                <div class="progress-bar bg-green" role="progressbar" aria-valuenow="@Model.Avance" aria-valuemin="0" aria-valuemax="100" style="width: @progreso">
                                </div>
                            </div>
                            <small>
                                @Model.Avance% completo
                            </small>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer d-flex justify-content-end">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <a class="btn btn-link btn-sm text-dark mr-4" href="@Url.Action("Index","Solicitud")"><i class="fa fa-arrow-alt-circle-left text-dark mr-3"></i>Cancelar</a>
                        <button type="submit" class="btn btn-danger btn-sm mr-2 text-bold"><i class="fa fa-trash mr-3"></i>Eliminar</button>
                    }
                </div>
                <!-- /.card-footer -->
            </section>
        </div>
    </div>
</div>
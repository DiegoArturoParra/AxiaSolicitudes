@model IEnumerable<AttentionAxia.Models.Responsables>

@{
    ViewBag.Title = "Responsables";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Responables</h2>

<p>
    @Html.ActionLink("Crear", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CelulaPertenceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LineaPerteneceId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.CelulaPertenceId)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.LineaPerteneceId)
        </td>
        <td class="text-center">
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class="btn btn-primary"}) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }, new { @class = "btn btn-sencondary" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

@model AttentionAxia.Models.Responsable

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-lg">
        <h2 class="text-center">Editar responsable</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Nombres, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CelulaPerteneceId, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-12">
                @Html.DropDownList("CelulaPerteneceId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CelulaPerteneceId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LineaPerteneceId, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-12">
                @Html.DropDownList("LineaPerteneceId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LineaPerteneceId, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group mt-4">
            <div class="d-flex justify-content-end">
                <a class="btn btn-outline-light text-dark mr-4" href="@Url.Action("Index","Responsables")"><i class="fa fa-arrow-alt-circle-left text-dark mr-3"></i>Cancelar</a>
                <button type="submit" class="btn btn-primary mr-2"><i class="fa fa-save mr-3"></i>Guardar</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

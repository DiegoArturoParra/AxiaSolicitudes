@model AttentionAxia.Models.Responsable

@{
    ViewBag.Title = "Eliminar responsable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.Title</title>
<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title text-bold text-white">¿Está seguro que desea eliminar el responsable?</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <section class="form-horizontal">
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Nombre Completo</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled value="@Model.Nombres">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Célula de trabajo</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled value="@Model.CelulaPertenece.Descripcion">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Línea de trabajo</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled value="@Model.LineaPertenece.Descripcion">
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer d-flex justify-content-end">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <a class="btn btn-link btn-sm text-dark mr-4" href="@Url.Action("Index","Responsables")"><i class="fa fa-arrow-alt-circle-left text-dark mr-3"></i>Cancelar</a>
                        <button type="submit" class="btn btn-danger btn-sm mr-2 text-bold"><i class="fa fa-trash mr-3"></i>Eliminar</button>
                    }
                </div>
                <!-- /.card-footer -->
            </section>
        </div>
    </div>
</div>
